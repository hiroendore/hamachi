<div class="container mt-5">
  <h1 class="mb-4">文章の編集</h1>

  <%= form_with(model: @sentence, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :content, "文章", class: "form-label" %>
      <%= form.text_area :content, class: "form-control", rows: 5 %>
    </div>

    <div class="d-flex gap-2">
      <%= form.submit "更新", class: "btn btn-primary" %>
      <%= link_to "キャンセル", root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div> 