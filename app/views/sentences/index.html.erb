<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>文章一覧</h1>
    <%= link_to "新規作成", new_sentence_path, class: "btn btn-primary" %>
  </div>

  <% if @sentences.any? %>
    <div class="list-group">
      <% @sentences.each do |sentence| %>
        <div class="list-group-item">
          <div class="d-flex justify-content-between align-items-center">
            <p class="mb-0"><%= sentence.content %></p>
            <div class="d-flex align-items-center gap-2">
              <small class="text-muted">
                <%= sentence.created_at.strftime("%Y/%m/%d %H:%M") %>
              </small>
              <%= link_to "編集", edit_sentence_path(sentence), class: "btn btn-sm btn-outline-primary" %>
              <%= button_to "削除", sentence_path(sentence), method: :delete, class: "btn btn-sm btn-outline-danger", form: { data: { turbo_confirm: "この文章を削除してもよろしいですか？" } } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      まだ文章が登録されていません。
    </div>
  <% end %>
</div>
