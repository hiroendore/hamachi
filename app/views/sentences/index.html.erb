<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">文章一覧</h1>
      <div class="flex items-center space-x-4">
        <%= link_to '/quizzes', class: "btn btn-secondary btn-sm" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
          </svg>
          ランダム表示
        <% end %>
        <%= link_to new_sentence_path, class: "btn btn-primary btn-sm" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          新規作成
        <% end %>
      </div>
    </div>

    <% if @sentences.any? %>
      <div class="grid gap-6">
        <% @sentences.each do |sentence| %>
          <div class="card bg-white shadow-sm hover:shadow-md transition-shadow duration-200">
            <div class="card-body">
              <div class="flex justify-between items-start">
                <div class="flex-1 w-4/5">
                  <%= link_to sentence_path(sentence), class: "text-lg font-medium text-gray-900 hover:text-primary mb-2 block break-words" do %>
                    <%= sentence.content %>
                  <% end %>
                  <p class="text-sm text-gray-500">
                    <%= sentence.created_at.strftime("%Y/%m/%d %H:%M") %>
                  </p>
                </div>
                <div class="flex items-center space-x-1">
                  <%= link_to edit_sentence_path(sentence), class: "btn btn-sm btn-ghost" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                    </svg>
                  <% end %>
                  <%= button_to sentence_path(sentence), method: :delete, class: "btn btn-sm btn-ghost text-error", form: { data: { turbo_confirm: "この文章を削除してもよろしいですか？" } } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="card bg-white shadow-sm">
        <div class="card-body text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <p class="text-gray-500">まだ文章が登録されていません。</p>
          <%= link_to "新規作成", new_sentence_path, class: "btn btn-primary btn-sm mt-4" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
