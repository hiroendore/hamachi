<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="card-title">文章の詳細</h1>
        <div class="d-flex gap-2">
          <%= link_to "編集", edit_sentence_path(@sentence), class: "btn btn-primary" %>
          <%= button_to "削除", sentence_path(@sentence), method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "この文章を削除してもよろしいですか？" } } %>
        </div>
      </div>

      <div class="mb-4">
        <h5 class="card-subtitle mb-2 text-muted">作成日時</h5>
        <p><%= @sentence.created_at.strftime("%Y/%m/%d %H:%M") %></p>
      </div>

      <div class="mb-4">
        <h5 class="card-subtitle mb-2 text-muted">内容</h5>
        <p class="card-text"><%= @sentence.content %></p>
      </div>

      <%= link_to "一覧に戻る", root_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div> 