<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="card bg-white shadow-sm">
      <div class="card-body">
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-3xl font-bold text-gray-900">文章の詳細</h1>
          <div class="flex items-center space-x-2">
            <%= link_to edit_sentence_path(@sentence), class: "btn btn-primary btn-sm" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
              </svg>
              編集
            <% end %>
            <%= button_to sentence_path(@sentence), method: :delete, class: "btn btn-error btn-sm", form: { data: { turbo_confirm: "この文章を削除してもよろしいですか？" } } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
              削除
            <% end %>
          </div>
        </div>

        <div class="space-y-6">
          <div>
            <h2 class="text-sm font-medium text-gray-500 mb-2">作成日時</h2>
            <p class="text-lg text-gray-900">
              <%= @sentence.created_at.strftime("%Y/%m/%d %H:%M") %>
            </p>
          </div>

          <div>
            <h2 class="text-sm font-medium text-gray-500 mb-2">内容</h2>
            <div class="prose max-w-none">
              <p class="text-lg text-gray-900 whitespace-pre-wrap"><%= @sentence.content %></p>
            </div>
          </div>
        </div>

        <div class="mt-8">
          <%= link_to root_path, class: "btn btn-ghost btn-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            一覧に戻る
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 