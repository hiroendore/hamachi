<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="card bg-white shadow-sm">
      <div class="card-body">
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-3xl font-bold text-gray-900">ランダム文章</h1>
          <%= link_to root_path, class: "btn btn-ghost btn-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            一覧に戻る
          <% end %>
        </div>

        <div class="space-y-8">
          <div class="bg-gray-100 p-6 rounded-lg">
            <h2 class="text-lg font-medium text-gray-900 mb-4">文章</h2>
            <p class="text-xl text-gray-900"><%= @sentence.content %></p>
          </div>

          <div class="flex justify-center">
            <%= link_to "別の文章を表示", quizzes_path, class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
